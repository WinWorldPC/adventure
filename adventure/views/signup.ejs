<%- include("head", {title: "Signup", sitePages: sitePages, user: user}) %>
<h1>Signup</h1>
<% if (message) { %>
<div class="alert alert-warning">
    <%= message %>
</div>
<% } %>
<form method="post" action="/user/signup">
    <div class="form-group">
        <label for="username">Username</label>
        <input required type="text" class="form-control" id="username" name="username" placeholder="Username">
    </div>
    <div class="form-group">
        <label for="username">Email</label>
        <input required type="email" class="form-control" id="email" name="email" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input required type="password" class="form-control" id="password" name="password" placeholder="Password">
    </div>
    <div class="row">
        <div class="form-group col">
            <label for="captcha">Captcha</label>
            <input required type="text" class="form-control" id="captcha" name="captcha" placeholder="Captcha">
        </div>
        <div class="col">
            <%- captcha %>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include("foot") %>