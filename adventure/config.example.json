{
  "name": "WinWorld",
  "headerFragment": "res/headerFragment.html",
  "footerFragment": "res/footerFragment.html",
  "runBehindProxy": false,
  "enableExperimentalFeatures": true,
  "morganLogFormat": "dev",
  "mysql": {
    "database": "winworld",
    "host": "localhost",
    "password": "password",
    "user": "root"
